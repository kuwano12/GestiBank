<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="248dp"
        android:layout_height="524dp"
        android:layout_marginHorizontal="80dp"
        android:layout_marginStart="81dp"
        android:layout_marginLeft="81dp"
        android:layout_marginTop="134dp"
        android:layout_marginEnd="82dp"
        android:layout_marginRight="82dp"
        android:layout_marginBottom="73dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnGoToAuth"
            android:layout_width="260dp"
            android:layout_height="100dp"
            android:layout_marginVertical="20dp"
            android:onClick="goToAuthPage"
            android:text="Se connecter" />

        <Button
            android:id="@+id/btnCreateAccount"
            android:layout_width="260dp"
            android:layout_height="100dp"
            android:layout_marginVertical="20dp"
            android:onClick="goToCreateAccountPage"
            android:text="Créer un nouveau compte" />

        <Button
            android:id="@+id/btnGoToConv"
            android:layout_width="260dp"
            android:layout_height="100dp"
            android:layout_marginVertical="20dp"
            android:onClick="gotToConversionPage"
            android:text="Faire une conversion" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Bienvenue à GestiBank"
            android:textSize="30sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>