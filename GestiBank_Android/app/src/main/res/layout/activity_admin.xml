<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminActivity">

    <LinearLayout
        android:layout_width="352dp"
        android:layout_height="499dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginStart="29dp"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="251dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="134dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnAgentList"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginVertical="20dp"
            android:onClick="goToAgentList"
            android:text="Liste des agents"
            app:backgroundTint="#03A9F4" />

        <Button
            android:id="@+id/btnAgentAdd"
            android:layout_width="match_parent"
            android:layout_height="80dp"

            android:layout_marginVertical="20dp"
            android:onClick="goToAddAgentForm"
            android:text="Ajouter un agent"
            app:backgroundTint="#03A9F4" />

        <Button
            android:id="@+id/btnDemand"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginVertical="20dp"
            android:onClick="gotToListDemand"
            android:text="Consulter les demandes"
            app:backgroundTint="#03A9F4" />

        <Button
            android:id="@+id/logoutAdmin"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#FFFFFF"
            android:onClick="logout"
            android:text="logout"
            app:backgroundTint="#F44336" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="400dp"
        android:layout_height="200dp"
        app:srcCompat="@mipmap/logo"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="3dp" />

</androidx.constraintlayout.widget.ConstraintLayout>