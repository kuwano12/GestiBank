<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditAgentActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginVertical="30dp"
        android:layout_marginHorizontal="20dp"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="167dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nom" />

        <EditText
            android:id="@+id/editViewAgentName"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PrÃ©nom" />

        <EditText
            android:id="@+id/editViewAgentFirstiname"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tel" />

        <EditText
            android:id="@+id/editAgentPhone"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email" />

        <EditText
            android:id="@+id/editMail"
            android:layout_width="match_parent"
            android:layout_height="60dp" />
        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Matricule" />

        <EditText
            android:id="@+id/editMatr"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <Button
            android:id="@+id/btnEditAgent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="editAgent"
            android:text="Modifier"
            app:backgroundTint="#03A9F4" />

        <Button
            android:id="@+id/btnDeleteAgent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="deleteAgent"
            android:text="Supprimer"
            app:backgroundTint="#F44336" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>